# Fundamentals
alias dl="cd ~/Downloads"
alias h="history"
alias cls="clear"
alias e="exit"
alias :q="exit"
alias v="nvim"
alias vim="nvim"
alias t="tmux"

# finds all files recursively and sorts by last modification, ignore hidden files
alias lastmod='find . -type f -not -path "*/\.*" -exec ls -lrt {} +'

# Git
alias g="git"
alias gp='git pull'
alias gs='git status'
alias lg='lazygit'

# Easier navigation: .., ..., ...., .....,
alias ..="cd .."
alias ...="cd ../.."
alias repos="cd $REPOS"
alias dot="cd $DOTFILES"
alias ghrepos="cd $GHREPOS"
alias gr="ghrepos"

# Kubernetes
alias k='kubectl'

# Terraform
alias tf="terraform "

# Where should I put you?
bindkey -s "^F" 'tmux-sessionizer^M'

# List all files colorized in long format
alias ls="eza -lh --icons=always --colour=auto --colour-scale=age --colour-scale-mode=gradient --group-directories-first --git --time-style=long-iso"
alias l="ls -A"
alias la="ls -A -s=modified"
alias lall="la"
alias ld="ls -D -s=modified"
alias ldir="ld"
alias lf="ls -f -s=modified"
alias lfile="lf"
alias lt="ls -A --tree --level=2"
alias ltr="ls -A --tree --level=4"

# Always enable colored `grep` output
alias grep='grep --color=auto '

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Get week number
alias week='date +%V'

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

# Networking
alias ipconfig="ip addr" # Eww windows
alias pubip="dig +short myip.opendns.com @resolver1.opendns.com"
